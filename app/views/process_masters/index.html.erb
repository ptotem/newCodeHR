<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <%= link_to 'New Master Process', new_process_master_path, :class=>"btn btn-info" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="table-header">Listing Master Pros</div>
    <table id="master_pros_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th style="width: 25%">_id</th>
            <th style="width: 45%">Name</th>
            <th style="width: 10%" class="center">Show</th>
            <th style="width: 10%" class="center">Edit</th>
            <th style="width: 10%" class="center" class="center">Destroy</th>
          </tr>
      </thead>

      <tbody>
          <% @process_masters.each do |process_master| %>
              <tr>
                <td><%= process_master._id.to_s %></td>
                <td><%= process_master.name %></td>
                <td class="center">
                  <%= link_to process_master, :class => "btn btn-xs btn-info" do %>
                     <i class='fa fa-eye bigger-130'></i>
                  <% end %>
                </td>
                <td class="center">
                  <%= link_to edit_process_master_path(process_master), :class => "btn btn-xs btn-warning" do %>
                     <i class='fa fa-edit bigger-130'></i>
                  <% end %>
                </td>
                <td class="center">
                  <%= link_to process_master, :class => "btn btn-xs btn-danger", method: :delete, data: { confirm: 'Are you sure?' } do %>
                     <i class='fa fa-trash-o bigger-130'></i>
                  <% end %>
                </td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
